{% extends 'base.html.twig' %}


{% block body %}
    {{ parent() }}
    {# {{ dump(single_post) }} #}

    <div class="container bg-white rounded my-3 p-4">
        <div class="d-flex bd-highlight">
            <div class="p-2 flex-grow-1 bd-highlight">
                <h3>{{single_post.title}}</h3>
                <div class="my-3" style="color:#3282b8;" onClick="ILike({{ single_post.id }})">
                    <i class="fa fa-thumbs-up"></i><strong> # {{ single_post.likes }}</strong>
                </div>
                <div style="color:#c3f584;">
                    <div class=" bg-green"> <i class="far fa-clock"></i> <strong>Day Posted: {{ single_post.dateposted | date }} </strong></div>
                </div>
            </div>
            <div class="p-2 bd-highlight">
                <div class="align-self-center">
                    <img class="rounded" src="{{ asset('uploads/files_uploaded/'~single_post.photo) }}" width="150px">
                </div>
            </div>
        </div>
        <hr>
        <div class="text-justify my-3">
            <p>
                {{ single_post.content }}
            </p>
        </div>
    
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('js/ajax-call.js') }}" ></script>
{% endblock %}